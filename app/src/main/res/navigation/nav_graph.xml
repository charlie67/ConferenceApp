<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/sessionsFragment">

    <fragment
        android:id="@+id/sessionsFragment"
        android:name="to.charlie.conferenceapp.ui.sessions.SessionsFragment"
        android:label="fragment_sessions"
        tools:layout="@layout/fragment_sessions">
        <action
            android:id="@+id/action_session_fragment_to_session_item_view"
            app:destination="@+id/sessionItemFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="to.charlie.conferenceapp.ui.favourites.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/speakersFragment"
        android:name="to.charlie.conferenceapp.ui.speakers.SpeakersFragment"
        android:label="fragment_speakers"
        tools:layout="@layout/fragment_speakers" />
    <fragment
        android:id="@+id/sessionItemFragment"
        android:name="to.charlie.conferenceapp.ui.sessions.SessionItemFragment"
        android:label="fragment_session_item"
        tools:layout="@layout/fragment_session_item" />
</navigation>